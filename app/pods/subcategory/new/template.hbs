<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Nova SubCategoria</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-6">
        <div class="panel panel-default">
            <div class="panel-heading">
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-12">
                        <form role="form" {{action 'save' model on='submit'}}>
                            <div class="form-group">
                                <label>TÃ­tulo</label>
                                {{input class="form-control" value=model.name}}
                                <p class="help-block">Examplo: Boneco ou Pendrive</p>
                            </div>
                            <div class="form-group">
                            	<label>Categoria</label>
                            	{{model-select
                                model=model
                                options=categories
                                default=model.category
                                action='setCategory'}}
                            </div>
                            <button type="submit" class="btn btn-outline btn-success">Cadastrar</button>
                            <button type="reset" class="btn btn-outline btn-danger" {{action 'cancel'}}>Cancelar</button>
                        </form>
                    </div>
                    <!-- /.col-lg-6 (nested) -->
                </div>
                <!-- /.row (nested) -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->