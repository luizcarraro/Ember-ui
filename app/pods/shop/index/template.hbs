<div class="row">
	<div class="col-lg-12">
		<h1 class="page-header">Lojas</h1>
	</div>
	<!-- /.col-lg-12 -->
</div>

<div class="row">
  <div class="col-lg-12">
      <div class="panel panel-default">
          <div class="panel-heading">
              
          </div>
          <!-- /.panel-heading -->
          <div class="panel-body">
              <div class="dataTable_wrapper">
                  <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                      <thead>
                          <tr>
                              <th>ID</th>
                              <th>Nome</th>
                              <th>Dono</th>
                              <th>Cidade</th>
                              <th>Produtos</th>
                              <th>CNPJ</th>
                              <th>Contato</th>
                              <th></th>
                          </tr>
                      </thead>
                      <tbody>
                      	{{#each model.shops as |shop|}}
                          <tr class="odd gradeX">
                              <td>{{shop.id}}</td>
                              <td>
                                {{input-edit model=shop value=shop.name}}
                              </td>
                              <td>{{shop.owner.firstName}}</td>
                              <td>
                                {{!-- {{shop.city.name}} --}}
                                {{#if shop.isCityEditing}}

                                  {{model-select
                                    model=shop
                                    options=model.cities
                                    default=shop.city
                                    action='saveCity'}}

                                  <button class="btn btn-danger" {{action 'cancelCityEdit' shop}}>Cancelar</button>

                                {{else}}
                                  <span {{action 'editCity' shop}}>
                                    {{shop.city.name}}  <i class="fa fa-pencil" aria-hidden="true"></i>

                                  </span>
                                {{/if}}
                              </td>
                              <td>{{shop.products.length}}</td>
                              <td>{{shop.cnpj}}</td>
                              <td>{{shop.phone}}</td>
                              <td>Ver detalhes</td>
                          </tr>
                          {{/each}}
                      </tbody>
                  </table>
              </div>
              <!-- /.table-responsive -->
          </div>
          <!-- /.panel-body -->
      </div>
      <!-- /.panel -->
  </div>
  <!-- /.col-lg-12 -->
</div>