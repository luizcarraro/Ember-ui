<div class="row">
	<div class="col-lg-12">
		<h1 class="page-header">Editar Produto</h1>
	</div>
	<!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
	<div class="col-lg-12">
		<div class="panel panel-default">
			<div class="panel-heading">
			</div>
			<div class="panel-body">
				<div class="row">
					<div class="col-lg-6">
						<form role="form" {{action 'save' model on='submit'}}>
							<div class="form-group ">
								<label >Título</label>
								{{input class="form-control" value=model.name}}
							</div>
							<div class="form-group ">
								<label class="col-sm-5 col-form-label">Preço</label>
								{{!-- <div class="col-sm-7"> --}}
									{{input id="price" class="form-control" value=model.price}}
								{{!-- </div> --}}
							</div>
							<br>
							<div class="form-group ">
								<label class="" >Loja: </label>
								<span>{{model.shop.name}}</span>              
							</div>
							<div class="form-group ">
							<label class="">Categoria: </label>
							{{#power-select
								id="categoria"
					    	searchEnabled=false
					    	placeholder="Selecione a Categoria"
					      selected=model.category
					      options=categories
					      onchange=(action "setCategory")
					      as |category|
					    }}
					      {{category.name}}
	   					{{/power-select}}
							</div>
							
							<div class="form-group">
							<label class="col-sm-3 col-form-label">Subcategoria: </label>
							{{#power-select
						    	searchEnabled=false
						    	disabled=disabledSelectSubcategory
						    	placeholder=subcategoryPlaceholder
						    	noMatchesMessage="Sem subcategorias"
						      selected=model.subcategory
						      options=subcategories
						      onchange=(action "setSubcategory")
						      as |subcategory|
						    }}
						      {{subcategory.name}}
		   				 {{/power-select}}							
							</div>								
							<div class="form-group">
								{{pictures-select product=model}}
							</div>
							
							{{!-- <div class="row"> --}}
								<button type="submit" class="btn btn-outline btn-success">Salvar</button>
								<button type="reset" class="btn btn-outline btn-danger" {{action 'cancel'}}>Cancelar</button>
							{{!-- </div> --}}
						</form>
					</div>
					<!-- /.col-lg-6 (nested) -->
				</div>
				<!-- /.row (nested) -->
			</div>
			<!-- /.panel-body -->
		</div>
		<!-- /.panel -->
	</div>
	<!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<script type="text/javascript">
$(document).ready(function(){
  $('#price').inputmask('currency', { radixPoint: ",", prefix: 'R$ ', autoUnmask: true, rightAlign: false });
});
</script>