<div class="row">
	<div class="col-lg-12">
		<h1 class="page-header">Novo Produto</h1>
	</div>
	<!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
	<div class="col-lg-12">
		<div class="panel panel-default">
			<div class="panel-heading">
			</div>
			<div class="panel-body">
				<div class="row">
					<div class="col-lg-6">
						<form role="form" {{action 'save' model on='submit'}}>
							<!-- Multiple Radios (inline) -->
							<div class="form-group">
								<label >Tipo</label>
								<div >
									<label class="radio-inline" for="radios-0">
										{{radio-button value='product' checked=model.type}}
										Produto
									</label>
									<label class="radio-inline" for="radios-1">
										{{radio-button value='service' checked=model.type}}
										Serviço
									</label>
								</div>
							</div>
							<br>
							<div class="form-group">
								<label>Título</label>
								{{input class="form-control" value=model.name}}
							</div>
							<div class="row">
								<div class="form-group col-xs-4">
									<label class="control-label">Preço</label>
									{{input id="price" class="form-control" value=model.price }}
								</div>
							
								<div class="form-group col-xs-6">
									<div class="checkbox">
										<label>
											{{input type="checkbox" checked=model.hidePrice}}
											Esconder preço
										</label>
									</div>
								</div>
							</div>
							<div class="form-group ">
								<label>Loja</label>
								{{model-select model=model.shop options=shops }}
							</div>
							<div class="form-group">
								<label>Categoria</label>
							{{#power-select
					    	searchEnabled=false
					    	placeholder="Selecione a Categoria"
					      selected=model.category
					      options=categories
					      onchange=(action "setCategory")
					      as |category|
					    }}
					      {{category.name}}
	   					{{/power-select}}
							</div>
							<div class="form-group">
							<label class="col-md-3 control-label">Subcategoria</label>
							{{#power-select
						    	searchEnabled=false
						    	disabled=disabledSelectSubcategory
						    	placeholder=subcategoryPlaceholder
						    	noMatchesMessage="Sem subcategorias"
						      selected=model.subcategory
						      options=subcategories
						      onchange=(action "setSubcategory")
						      as |subcategory|
						    }}
						      {{subcategory.name}}
		   				 {{/power-select}}
							</div>
							<div class="form-group">
								<label class="col-md-3 control-label" for="textarea" >Descrição </label>
								{{!-- <div class="col-md-8"> --}}
									{{textarea class="form-control"  style="min-height: 160px !important" name="textarea" value=model.description}}
									<span class="help-block">Descreva o produto ou serviço</span>
								{{!-- </div> --}}
							</div>
							{{!-- <div class="row"> --}}
								<button type="submit" class="btn btn-outline btn-success">Cadastrar</button>
								<button type="reset" class="btn btn-outline btn-danger" {{action 'cancel'}}>Cancelar</button>
							{{!-- </div> --}}
						</form>
					</div>
					<!-- /.col-lg-6 (nested) -->
				</div>
				<!-- /.row (nested) -->
			</div>
			<!-- /.panel-body -->
		</div>
		<!-- /.panel -->
	</div>
	<!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<script type="text/javascript">
$(document).ready(function(){
  $('#price').inputmask('currency', { radixPoint: ",", prefix: 'R$ ', autoUnmask: true });
});
</script>