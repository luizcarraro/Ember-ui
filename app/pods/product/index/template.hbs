<div class="row">
	<div class="col-lg-12">
		<h1 class="page-header">Todos os produtos</h1>
	</div>
	<!-- /.col-lg-12 -->
</div>

<div class="row">
  <div class="col-lg-12">
      <div class="panel panel-default">
          <div class="panel-heading">
            {{#link-to 'product.new'}}
              <button type="button" class="btn btn-primary">
                <i class="fa fa-plus"></i> Adicionar
              </button>
            {{/link-to}}
          </div>
          <!-- /.panel-heading -->
          <div class="panel-body">
              <div class="dataTable_wrapper">
                  <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                      <thead>
                          <tr>
                              <th>#</th>
                              <th>Título</th>
                              <th>Preço</th>
                              <th>Visível</th>
                              <th>Categoria/Subcategoria</th>
                              <th>Loja</th>
                              <th>Imagem</th>
                              <th>Ações</th>
                          </tr>
                      </thead>
                      <tbody>
                      	{{#each model as |product|}}
                          <tr class="odd gradeX" style="height:30px">
                              <td>{{product.id}}</td>
                              <td>
                                {{input-edit model=product value=product.name}}
                              </td>
                              <td>
                                {{format-currency product.price}}
                              </td>
                              <td class="center">
                              	{{#if product.visible}}
                              	Sim
                              	{{else}}
                              	Não
                              	{{/if}}
                              </td>
                              <td>
                                {{product.category.name}} / {{product.subcategory.name}}
                              </td>
                              <td class="center">
                              	{{product.shop.name}}
                              </td>
                              <td style="max-width:50px">
                                {{#if product.images.firstObject}}
                                  <img style="max-width:100%" src={{product.images.firstObject.url}}>
                                {{else}}
                                  <a {{action 'toggleSearch' product.name}} data-toggle="modal" data-target="#selectImageModal">Ver sugestões</a>
                                {{/if}}
                              </td>
                              <td>
                                  <button type="button" class="btn btn-success" title="Visualisar o Anúncio no Procurava.com" {{action 'goToProduct' product}} >
                                    <i class="fa fa-eye"></i>
                                  </button>
                                {{#link-to 'product.edit' product}}
                                  <button type="button" class="btn btn-primary" title="Editar o Anúncio">
                                    <i class="fa fa-edit"></i>
                                  </button>
                                {{/link-to}}
                                  <button {{action 'delete' product}} type="button" class="btn btn-danger" title="Apagar o Anúncio">
                                    <i class="fa fa-times"></i>
                                  </button>
                              </td>
                          </tr>
                          {{/each}}
                      </tbody>
                  </table>
              </div>
              <!-- /.table-responsive -->
          </div>
          <!-- /.panel-body -->
      </div>
      <!-- /.panel -->
  </div>
  <!-- /.col-lg-12 -->
</div>
