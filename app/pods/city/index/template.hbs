<div class="row">
	<div class="col-lg-12">
		<h1 class="page-header">{{model.meta.total}} Cidades</h1>
	</div>
	<!-- /.col-lg-12 -->
</div>

<div class="row">
  <div class="col-lg-12">
      <div class="panel panel-default">
          <div class="panel-heading">
            {{#link-to 'city.new'}}
              <button type="button" class="btn btn-primary">
                <i class="fa fa-plus"></i> Adicionar Nova
              </button>
              {{/link-to}}              
          </div>
          <!-- /.panel-heading -->
          <div class="panel-body">
              <div class="dataTable_wrapper">
                  <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                      <thead>
                          <tr>
                              <th>#</th>
                              <th>Nome</th>
                              <th>Lojas</th>
                          </tr>
                      </thead>
                      <tbody>
                      	{{#each model as |city|}}
                          <tr class="odd gradeX">
                              <td>{{city.id}}</td>
                              <td>
                                {{input-edit model=city value=city.name}}
                              </td>
                              <td>{{city.shops.length}}</td>
                          </tr>
                          {{/each}}
                      </tbody>
                  </table>
              </div>
              <!-- /.table-responsive -->
          </div>
          <!-- /.panel-body -->
      </div>
      <!-- /.panel -->
  </div>
  <!-- /.col-lg-12 -->
</div>
{{ember-pagination perPage=10 limit=5 content=model total=model.meta.total loadAction='changePage'}}
